<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.Pane?>

<Pane id="pane" fx:id="pane" prefHeight="222.0" prefWidth="244.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.org.cria.splinkerapp.controllers.HomeController">
    <children>
        <Button id="syncServerBtn" fx:id="syncServerBtn" layoutX="43.0" layoutY="110.0" onMouseClicked="#onSyncServerBtnClicked" prefHeight="102.0" prefWidth="146.0" text="Sincronizar Servidor" />
        <MenuBar id="menuBar" fx:id="menuBar" prefHeight="27.0" prefWidth="244.0">
            <menus>
                <Menu mnemonicParsing="false" text="Principal">
                    <MenuItem id="syncMetaDataMenuItem" fx:id="syncMetaDataMenuItem" mnemonicParsing="false" onAction="#onSyncMetaDataMenuItemClick" text="Sincronizar Metadados" />
                    <MenuItem id="spLinkerUpdateMenuItem" fx:id="spLinkerUpdateMenuItem" mnemonicParsing="false" text="Atualizar SpLinker" />
                </Menu>
                <Menu mnemonicParsing="false" text="Configuração">
                    <MenuItem id="datasetConfigMenuItem" fx:id="datasetConfigMenuItem" mnemonicParsing="false" onAction="#onDataSetConfigMenuItemClick" text="Configurar conjunto de dados" />
               <MenuItem id="proxyConfigMenuItem" fx:id="proxyConfigMenuItem" mnemonicParsing="false" onAction="#onProxyConfigMenuOptionClick" text="Configurar proxy" />
               <MenuItem id="centralServiceConfigMenuItem" fx:id="centralServiceConfigMenuItem" mnemonicParsing="false" onAction="#onCentralServiceConfigMenuOptionClick" text="Configurar serviço central" />
               <MenuItem id="deleteLocalConfigMenuItem" fx:id="deleteLocalConfigMenuItem" mnemonicParsing="false" onAction="#onDeleteLocalConfigMenuItemClick" text="Excluir configurações locais" />
