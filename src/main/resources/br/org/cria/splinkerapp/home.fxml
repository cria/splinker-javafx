                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <MenuItem mnemonicParsing="false" text="About" />
                    <MenuItem mnemonicParsing="false" text="FAQ" />
                </Menu>
            </menus>
        </MenuBar>
      <ComboBox id="cmbCollection" fx:id="cmbCollection" layoutX="41.0" layoutY="69.0" onAction="#onCmbCollectionChange" prefWidth="150.0" />
      <Label id="lblCollectionName" fx:id="lblCollectionName" layoutX="41.0" layoutY="40.0" prefHeight="17.0" prefWidth="150.0" />
      <Button id="btnDeleteDataset" fx:id="btnDeleteDataset" layoutX="204.0" layoutY="69.0" mnemonicParsing="false" onMouseClicked="#onDeleteDatasetButtonClick" text="X" textFill="#fc0808" />
    </children>
</Pane>
