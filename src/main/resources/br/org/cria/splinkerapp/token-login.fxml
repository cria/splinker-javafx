<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" id="pane" fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" fx:controller="br.org.cria.splinkerapp.controllers.TokenLoginController">
    <children>
        <TextField id="tokenField" fx:id="tokenField" layoutX="14.0" layoutY="44.0" prefHeight="34.0" prefWidth="325.0" promptText="Por favor, insira o token">
        </TextField>

        <Button id="btnAddToken" fx:id="btnAddToken" layoutX="56.0" layoutY="101.0" mnemonicParsing="false" onMouseClicked="#onButtonAddTokenClicked" prefHeight="34.0" prefWidth="85.0" text="Salvar"/>
        <Label layoutX="14.0" layoutY="10.0" prefHeight="34.0" prefWidth="228.0" text="Token">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Button id="btnDeleteToken" fx:id="btnDeleteToken" layoutX="203.0" layoutY="101.0" mnemonicParsing="false" onMouseClicked="#onButtonDeleteTokenClicked" prefHeight="34.0" prefWidth="85.0" text="Excluir"/>

        <!-- Configurando a posição do VBox -->
        <VBox fx:id="tokenBox" layoutX="14.0" layoutY="150.0" spacing="10" alignment="CENTER" prefWidth="325.0">
            <!-- Elementos adicionais aparecerão aqui -->
        </VBox>

    </children>
</Pane>
